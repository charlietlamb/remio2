{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"],
      "@/backend/*": ["../backend/*"]
    },

    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true
  },
  "references": [
    {
      "path": "../backend/"
    }
  ],
  "extends": "../../tsconfig.base.json",
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../backend/src/actions/email/send-email.ts"
  ],
  "exclude": ["node_modules"]
}
